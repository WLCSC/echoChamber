<div class="buttonbox">
	<h4>Upload sounds</h4>

	<%= form_for(Sound.new) do |f| %>
		<div class="field">
			<button class="pseudobutton">Browse</button>
			<%= f.file_field :data %>
		</div>
		<%= f.hidden_field :room_id, value: @room.id %>

		<div class="actions">
			<%= f.submit nil, class: "submit_format"%>
		</div>
	<% end %>
</div>

<div class="buttonbox">
	<h4>Sound file list</h4>
</div>
