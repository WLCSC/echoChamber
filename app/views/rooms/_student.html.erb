<div id="student">
	<p>Password</p>
	<%= form_tag(password_room_path(@room), remote: true) do %>
		<%= text_field_tag :password, nil, placeholder: "Enter room password..." %>
		<%= submit_tag "Go" %>
	<% end %>
</div>

<% if @room.last_sound %>
	<%= audio_tag @room.last_sound.data.url, id: "jukebox" %>
<% else %>
	<audio id="jukebox"></audio>
<% end %>
